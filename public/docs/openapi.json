    "components": {
        "schemas": {
            "Note": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Новая заметка"
                    },
                    "content": {
                        "type": "string",
                        "example": "Содержимое"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2026-02-03 12:00:00"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2026-02-03 12:00:00"
                    }
                },
                "type": "object"
            },
            "NoteCreateRequest": {
                "required": [
                    "title"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "maxLength": 200
                    },
                    "content": {
                        "type": "string",
                        "maxLength": 5000
                    }
                },
                "type": "object"
            },
            "NoteUpdateRequest": {
                "properties": {
                    "title": {
                        "type": "string",
                        "maxLength": 200
                    },
                    "content": {
                        "type": "string",
                        "maxLength": 5000
                    }
                },
                "type": "object"
            },
            "NoteResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "data": {
                        "$ref": "#/components/schemas/Note"
                    }
                },
                "type": "object"
            },
            "NotesListResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Note"
                        }
                    }
                },
                "type": "object"
            },
            "MessageResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "message": {
                        "type": "string",
                        "example": "Note deleted successfully"
                    }
                },
                "type": "object"
            },
            "ErrorResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "error"
                    },
                    "message": {
                        "type": "string",
                        "example": "Internal server error"
                    }
                },
                "type": "object"
            },
            "ValidationErrorResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "error"
                    },
                    "message": {
                        "type": "string",
                        "example": "Validation failed"
                    },
                    "errors": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "ApiToken": {
                "type": "apiKey",
                "description": "Статический токен доступа из переменной окружения API_TOKEN",
                "name": "X-API-Token",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Notes",
            "description": "Операции с заметками"
        }
    ]
}