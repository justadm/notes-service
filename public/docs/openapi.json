{
  "openapi": "3.0.3",
  "info": {
    "title": "Notes Service API",
    "version": "1.0.0",
    "description": "REST API для управления заметками"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/api/notes": {
      "get": {
        "summary": "Получить все заметки",
        "responses": {
          "200": {
            "description": "Список заметок",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotesListResponse"
                },
                "examples": {
                  "notes": {
                    "value": {
                      "status": "success",
                      "data": [
                        {
                          "id": 1,
                          "title": "Новая заметка",
                          "content": "Содержимое",
                          "created_at": "2026-02-03 12:00:00",
                          "updated_at": "2026-02-03 12:00:00"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Внутренняя ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "server_error": {
                    "value": {
                      "status": "error",
                      "message": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Notes"
        ]
      },
      "post": {
        "summary": "Создать заметку",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NoteCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Заметка создана",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoteResponse"
                },
                "examples": {
                  "created": {
                    "value": {
                      "status": "success",
                      "data": {
                        "id": 1,
                        "title": "Новая заметка",
                        "content": "Содержимое",
                        "created_at": "2026-02-03 12:00:00",
                        "updated_at": "2026-02-03 12:00:00"
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Ошибка валидации",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                },
                "examples": {
                  "validation_error": {
                    "value": {
                      "status": "error",
                      "message": "Validation failed",
                      "errors": {
                        "title": [
                          "Title is required"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Внутренняя ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "server_error": {
                    "value": {
                      "status": "error",
                      "message": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Notes"
        ]
      }
    },
    "/api/notes/{id}": {
      "get": {
        "summary": "Получить заметку по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Заметка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoteResponse"
                },
                "examples": {
                  "note": {
                    "value": {
                      "status": "success",
                      "data": {
                        "id": 1,
                        "title": "Новая заметка",
                        "content": "Содержимое",
                        "created_at": "2026-02-03 12:00:00",
                        "updated_at": "2026-02-03 12:00:00"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Заметка не найдена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "not_found": {
                    "value": {
                      "status": "error",
                      "message": "Note not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Внутренняя ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "server_error": {
                    "value": {
                      "status": "error",
                      "message": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Notes"
        ]
      },
      "put": {
        "summary": "Обновить заметку",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NoteUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Заметка обновлена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoteResponse"
                },
                "examples": {
                  "updated": {
                    "value": {
                      "status": "success",
                      "data": {
                        "id": 1,
                        "title": "Новая заметка",
                        "content": "Содержимое",
                        "created_at": "2026-02-03 12:00:00",
                        "updated_at": "2026-02-03 12:00:00"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Заметка не найдена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "not_found": {
                    "value": {
                      "status": "error",
                      "message": "Note not found"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Ошибка валидации",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                },
                "examples": {
                  "validation_error": {
                    "value": {
                      "status": "error",
                      "message": "Validation failed",
                      "errors": {
                        "title": [
                          "Title is required"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Внутренняя ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "server_error": {
                    "value": {
                      "status": "error",
                      "message": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Notes"
        ]
      },
      "delete": {
        "summary": "Удалить заметку",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Заметка удалена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageResponse"
                },
                "examples": {
                  "deleted": {
                    "value": {
                      "status": "success",
                      "message": "Note deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Заметка не найдена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "not_found": {
                    "value": {
                      "status": "error",
                      "message": "Note not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Внутренняя ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "server_error": {
                    "value": {
                      "status": "error",
                      "message": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Notes"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Note": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "NoteCreateRequest": {
        "type": "object",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 200
          },
          "content": {
            "type": "string",
            "maxLength": 5000
          }
        }
      },
      "NoteUpdateRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 200
          },
          "content": {
            "type": "string",
            "maxLength": 5000
          }
        }
      },
      "NoteResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/Note"
          }
        }
      },
      "NotesListResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Note"
            }
          }
        }
      },
      "MessageResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ValidationErrorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "examples": {
      "NoteExample": {
        "value": {
          "id": 1,
          "title": "Новая заметка",
          "content": "Содержимое",
          "created_at": "2026-02-03 12:00:00",
          "updated_at": "2026-02-03 12:00:00"
        }
      },
      "NotesListExample": {
        "value": [
          {
            "id": 1,
            "title": "Новая заметка",
            "content": "Содержимое",
            "created_at": "2026-02-03 12:00:00",
            "updated_at": "2026-02-03 12:00:00"
          }
        ]
      },
      "ValidationErrorExample": {
        "value": {
          "status": "error",
          "message": "Validation failed",
          "errors": {
            "title": [
              "Title is required"
            ]
          }
        }
      },
      "NotFoundExample": {
        "value": {
          "status": "error",
          "message": "Note not found"
        }
      },
      "DeleteMessageExample": {
        "value": {
          "status": "success",
          "message": "Note deleted successfully"
        }
      }
    }
  },
  "tags": [
    {
      "name": "Notes",
      "description": "Операции с заметками"
    }
  ]
}