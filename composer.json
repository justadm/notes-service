{
  "name": "notes/service",
  "description": "RESTful API сервис заметок",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "zircote/swagger-php": "^4.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "openapi:generate": "openapi --format json --output public/docs/openapi.json src"
  }
}
